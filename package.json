{
  "name": "@hello.nrfcloud.com/mock-http-api",
  "version": "0.0.0-development",
  "description": "Cloud HTTP mock API developed using AWS CDK in TypeScript",
  "type": "module",
  "scripts": {
    "test": "jest",
    "prepare": "husky install && check-node-version --package",
    "deploy": "cdk deploy",
    "synth": "cdk synth"
  },
  "keywords": [
    "nordicsemiconductor",
    "http",
    "mock",
    "aws",
    "cdk"
  ],
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@mockoon/serverless": "4.0.0",
    "@nordicsemiconductor/from-env": "2.0.0"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "3.388.0",
    "@aws-sdk/client-cloudwatch-logs": "3.388.0",
    "@aws-sdk/client-s3": "3.391.0",
    "@aws-sdk/client-sts": "3.391.0",
    "@nordicsemiconductor/asset-tracker-cloud-code-style": "12.0.70",
    "@nordicsemiconductor/eslint-config-asset-tracker-cloud-typescript": "16.0.12",
    "@swc/cli": "0.1.62",
    "@swc/core": "1.3.76",
    "@swc/jest": "0.2.29",
    "@types/aws-lambda": "8.10.119",
    "@types/glob": "8.1.0",
    "@types/jest": "29.5.3",
    "@types/yazl": "2.4.2",
    "@typescript-eslint/eslint-plugin": "6.3.0",
    "aws-cdk": "2.91.0",
    "aws-cdk-lib": "2.91.0",
    "cdk": "2.91.0",
    "chalk": "5.3.0",
    "check-node-version": "4.2.1",
    "constructs": "10.2.69",
    "eslint-plugin-unicorn": "48.0.1",
    "glob": "10.3.3",
    "husky": "8.0.3",
    "jest": "29.6.2",
    "tsx": "3.12.7",
    "typescript": "5.1.6",
    "yazl": "2.5.1"
  },
  "lint-staged": {
    "*.{md,json,yaml,yml}": [
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .js,.ts"
    ]
  },
  "engines": {
    "node": ">=20",
    "npm": ">=9"
  },
  "release": {
    "branches": [
      "saga"
    ],
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/github",
        {
          "successComment": false,
          "failTitle": false
        }
      ]
    ]
  },
  "prettier": "@nordicsemiconductor/asset-tracker-cloud-code-style/.prettierrc",
  "jest": {
    "transformIgnorePatterns": [
      "lodash_es"
    ],
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest",
        {
          "$schema": "https://json.schemastore.org/swcrc",
          "jsc": {
            "parser": {
              "syntax": "typescript"
            }
          }
        }
      ]
    },
    "testRegex": ".+\\.spec\\.ts$",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
